@model IEnumerable<Webbprojekt_TE15C_1.Models.Product>

@{
    ViewBag.Title = "Start";
}
<title>Momento Viveri</title>

<link href="https://fonts.googleapis.com/css?family=Barlow+Semi+Condensed" rel="stylesheet">

<div class="products">
    <h1>Produkter</h1>
    <hr />
    <br />
    <input type="text" id="" search" name="search" placeholder="Skriv produktnamn..." />
    <input type="submit" value="Sök" />
    <br />
    <br />
    @foreach (var item in Model)
    {

        <a href="@Url.Action("Details", "Products", new { id = item.ID })"
           class="product">

            <img src="@Url.Content("~/Content/Images/table.jpg")" alt="Marble table"
                 class="img-responsive" />

            <h2>@item.Name</h2>
            <p>
                <span class="price">@item.Price kr</span>
                <span class="=" btn btn-success buy"> <br />
                    <span class="glyphicon glyphicon-shopping-cart"></span>
                    Köp
                </span>
            </p>
            <p class="desc">@item.Description</p>
        </a>
    }

    @using (Html.BeginForm("Index", "Products", FormMethod.Get))
    {

    }
</div>
